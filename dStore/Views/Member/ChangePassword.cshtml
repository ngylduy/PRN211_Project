@model dStore.Models.Password

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Change Password</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Change Password</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<section class="profile">
    <div class="container pt-5 pb-5">

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }
        else if (!string.IsNullOrEmpty(ViewBag.Success))
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.Success
            </div>
        }

        <div class="row">
            <div class="col-sm-12 col-md-3 col-lg-3">
                <!-- Nav tabs -->
                <div class="dashboard_tab_button">
                    <ul class="nav flex-column dashboard-list">
                        <li><a asp-controller="Member" asp-action="Profile" class="primary-btn">My Profile</a></li>
                        <li> <a asp-controller="Order" asp-action="Index" class="primary-btn">Order</a></li>
                        <li> <a asp-controller="Member" asp-action="ChangePassword" class="primary-btn">Change Password</a></li>
                        <li><a asp-controller="Logout" asp-action="Index" class="primary-btn">Logout</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-12 col-md-9 col-lg-9">
                <div class="dashboard_detail contact__form" id="account-details">
                    <form asp-action="ChangePassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-lg-12">
                                <label asp-for="OldPassword"></label>
                                <input asp-for="OldPassword" type="password" required />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" type="password" required />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" type="password" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="primary-btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
